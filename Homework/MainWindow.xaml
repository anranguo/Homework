<Window x:Class="Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework"
        mc:Ignorable="d"
        Title="日程管理软件" Height="350" Width="525">


    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="添加日程" Click="OnCreate_Click"  />
            <MenuItem Header="修改日程" Click="OnModify_Click" />
            <MenuItem Header="查找日程" Click="OnSearch_Click" />
            <MenuItem Header="帮助" Click="OnHelp_Click" />
        </Menu>
    </DockPanel>

</Window>
